<?xml version="1.0"?>
<launch>
  <arg name="delta_value" default="0.05" doc="Resolution of the map (meters per pixel)"/>
  
  <include file="$(find turtlebot3_gazebo)/launch/turtlebot3_world.launch">
    <arg name="model" value="burger"/>
  </include>

  <!-- Gmapping с изменяемым параметром delta -->
  <node pkg="gmapping" type="slam_gmapping" name="gmapping">
    <param name="base_frame" value="base_footprint"/>
    <param name="odom_frame" value="odom"/>
    <param name="map_frame" value="map"/>
    
    <!-- ИЗМЕНЯЕМЫЙ ПАРАМЕТР DELTA -->
    <param name="delta" value="$(arg delta_value)"/>
    
    <param name="map_update_interval" value="2.0"/>
    <param name="maxUrange" value="3.5"/>
    <param name="particles" value="30"/>
  </node>

  <node pkg="turtlebot3_teleop" type="turtlebot3_teleop_key" name="teleop_keyboard" output="screen"/>

  <node pkg="rviz" type="rviz" name="rviz" 
        args="-d $(find study_pkg)/rviz/sim_mapping.rviz"/>
</launch>