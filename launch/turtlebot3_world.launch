<?xml version="1.0"?>
<launch>
  <!-- Аргументы launch-файла -->
  <arg name="model" default="waffle_pi" 
       doc="Модель TurtleBot3: burger, waffle или waffle_pi"/>
  <arg name="x_pos" default="0.0" 
       doc="Начальная позиция X робота"/>
  <arg name="y_pos" default="0.0" 
       doc="Начальная позиция Y робота"/>
  <arg name="z_pos" default="0.0" 
       doc="Начальная позиция Z робота"/>
  <arg name="gazebo_gui" default="true" 
       doc="Показывать графический интерфейс Gazebo"/>
  <arg name="world_name" default="$(find turtlebot3_gazebo)/worlds/turtlebot3_world.world" 
       doc="Мир Gazebo для запуска"/>
  
  <!-- Запуск мира Gazebo с TurtleBot3 -->
  <include file="$(find gazebo_ros)/launch/empty_world.launch">
    <arg name="world_name" value="$(arg world_name)"/>
    <arg name="paused" value="false"/>
    <arg name="use_sim_time" value="true"/>
    <arg name="gui" value="$(arg gazebo_gui)"/>  <!-- Управление GUI через аргумент -->
    <arg name="headless" value="false"/>
    <arg name="debug" value="false"/>
  </include>

  <!-- Загрузка модели робота -->
  <param name="robot_description" command="$(find xacro)/xacro --inorder $(find turtlebot3_description)/urdf/turtlebot3_$(arg model).urdf.xacro" />

  <!-- Спавн робота в Gazebo -->
  <node pkg="gazebo_ros" type="spawn_model" name="spawn_urdf" 
        args="-urdf -model turtlebot3_$(arg model) 
              -x $(arg x_pos) -y $(arg y_pos) -z $(arg z_pos) 
              -param robot_description"/>
</launch>